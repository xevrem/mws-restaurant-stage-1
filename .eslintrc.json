{
  "env": {
    "browser": true,
    "es6": true,
    "serviceworker": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "off",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console":[
      "warn",
      { "allow": ["warn", "error"] }
    ]
  }
}
